extends auth_layout

block content
  .text-center.mt-4
    h1.h2 LEARNIT
    p.lead Sign in to your account

  .card
    .card-body
      .m-sm-3
        form(action="/signin" method="POST")
          .mb-3
            label.form-label Email
            input.form-control.form-control-lg(type="email", name="email", placeholder="Enter your email")

          .mb-3
            label.form-label Password
            input.form-control.form-control-lg(type="password", name="password", placeholder="Enter password")

          .d-grid.gap-2.mt-3
            button.btn.btn-lg.btn-primary(type="submit") Sign In


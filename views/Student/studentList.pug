extends ../layout

block content
    div.container-fluid.p-0 
        h1.h3.mb-3 Students List 
        .row
            .col-12.col-xl-12
                .div.card
                    //- .card-header
                    //-     h5.card-title Contextual Classes
                    //-     h6.card-subtitle.text-muted Use contextual classes to color table rows or individual cells.

                    table.table.table-striped
                        thead
                            tr
                                th Student Name
                                th Class
                                th Registered By
                                th.d-none.d-md-table-cell(style="width:25%") Registration Date
                                th Actions
                        tbody
                            each student in students
                                tr
                                    td #{student.F_name} #{student.L_name}
                                    td #{student.Class}
                                    td #{student.User_ID}
                                    td.d-none.d-md-table-cell #{new Date(student.registered_on).toLocaleString()}
                                    td.table-action
                                        a(href=`/edit-student/${student.Student_ID}`)
                                            i.align-middle(data-feather="edit-2")
                                        a(href=`/delete-student/${student.Student_ID}`)
                                            i.align-middle(data-feather="trash")

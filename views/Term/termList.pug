extends ../layout

block content
    .container-fluid.p-0 
        .d-flex.justify-content-between.align-items-center.mb-4
            h1.h3.mb-0 Term List
            a.btn.btn-primary(href="/add-term")
                i.bi.bi-plus-circle
                |  Add New Term


        if status == 'error'
          .alert.alert-danger #{message}
        if status == 'success'
          .alert.alert-success #{message}

        if terms.length
          table.table.table-hover
            thead.table-light
              tr
                th ID
                th Name
                th Start Date
                th End Date
                th Actions
            tbody
              each term in terms
                tr
                  td #{term.Term_ID}
                  td #{term.Name}
                  td #{term.Start_Date.toDateString()}
                  td #{term.End_Date.toDateString()}
                   td.table-action
                      a(href=`/edit-term/${term.Student_ID}`)
                          i.align-middle(data-feather="edit-2")
                      // Trigger modal
                      a(href="#", data-bs-toggle="modal", data-bs-target=`#deleteModal-${term.Student_ID}`)
                          i.align-middle(data-feather="trash")
        else
          p.text-muted No terms found.

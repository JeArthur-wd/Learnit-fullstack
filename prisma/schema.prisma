generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model grade {
  ID         Int    @id @default(autoincrement())
  User_ID    Int
  Student_ID Int
  Subject_ID Int
  Marks      String @db.VarChar(100)
  Grade      String @db.VarChar(100)
  Term_ID    Int    @map("Term-ID")
}

model student {
  Student_ID    Int       @id @default(autoincrement())
  F_name        String    @db.VarChar(50)
  L_name        String    @db.VarChar(50)
  User_ID       Int
  Class         String    @db.VarChar(10)
  registered_on DateTime? @default(now()) @db.Timestamp(0)
}

model subject {
  Subject_ID Int    @id @default(autoincrement())
  Name       String @db.VarChar(50)
  User_ID    Int
}

model term {
  Term_ID    Int      @id @default(autoincrement())
  User_ID    Int
  Name       String   @db.VarChar(50)
  Start_Date DateTime @db.Date
  End_Date   DateTime @db.Date

  @@index([User_ID], map: "userFK")
}

model user {
  user_ID      Int      @id @default(autoincrement())
  FName        String   @db.VarChar(50)
  LName        String   @db.VarChar(50)
  Email        String   @db.VarChar(50)    @unique
  Password     String   @db.VarChar(200)
  CreationDate DateTime @default(now()) @db.Timestamp(0)
}
